<?xml version="1.0" encoding="utf-8"?>
<!-- start of book -->
<book>
  <!-- metadata, to group all the information about this book into one element. -->
  <!-- define our chapters -->
  <chapters>
    <!-- chapter1 - the first chapter to be seen -->
    <chapter id="chapter1">
      <!-- grouped chapter information -->
      <!-- a chapter can have one ore more pages. -->
      <pages>
        <!-- our first page! -->
        <page id="page1">
          <frames>
            <frame id="frame1" bordertype="triangle">
              <contents>
                <!-- content for left -->
                <content target="left" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                    <object type="text" id="text1" string="text1">
                    </object>
                  </objects>
                </content>
                <!-- content for right -->
                <content target="right" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                  </objects>
                </content>
              </contents>
            </frame>
            <frame id="frame2" bordertype="triangle" />
            <frame id="frame3" bordertype="triangle" />
          </frames>
        </page>
        <page id="page2">
          <frames>
            <frame id="frame1" bordertype="triangle">
              <contents>
                <!-- content for left -->
                <content target="left" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                    <object type="text" id="text1" string="text1">
                    </object>
                  </objects>
                </content>
                <!-- content for right -->
                <content target="right" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                  </objects>
                </content>
              </contents>
            </frame>
            <frame id="frame2" bordertype="rectangle" />
            <frame id="frame3" bordertype="rectangle" />
          </frames>
        </page>
        <page id="page3">
          <frames>
            <frame id="frame1" bordertype="rectangle">
              <contents>
                <!-- content for left -->
                <content target="left" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                    <object type="text" id="text1" string="text1">
                    </object>
                  </objects>
                </content>
                <!-- content for right -->
                <content target="right" type="none">
                  <objects>
                    <object type="character" id="duck">
                    </object>
                    <object type="character" id="croc" animation="talk" string="dia1">
                    </object>
                  </objects>
                </content>
              </contents>
            </frame>
            <frame id="frame2" bordertype="rectangle" />
            <frame id="frame3" bordertype="rectangle" />
          </frames>
        </page>
        <page id="page4">
          <frames>
            <frame id="frame1" bordertype="rectangle" />
          </frames>
        </page>
        <page id="page5">
          <frames>
            <frame id="frame1" bordertype="rectangle" />
          </frames>
        </page>
        <page id="page6">
          <frames>
            <frame id="frame1" bordertype="rectangle" />
          </frames>
        </page>
        <page id="page7">
          <frames>
            <frame id="frame1" bordertype="triangle" />
          </frames>
        </page>
      </pages>
      <!-- End of chapter -->
    </chapter>
    <!-- End of chapters -->
  </chapters>
  <!-- End of book -->
</book>